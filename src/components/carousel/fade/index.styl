.my-carousel {
  overflow: hidden;

  .car-list-wrap {
    position: relative;
    width: 100%;

    .car-item {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      opacity: 0;
      transition: opacity 0.5s;

      &.active {
        z-index: 2;
        opacity: 1;
      }
    }
  }
}
