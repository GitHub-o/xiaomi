.content-item {
  position: relative;
  float: left;
  width: 45%;
  height: 44px;
  margin-right: 2%;
  margin-top: 10px;
  border: 1px solid #ddd;
  text-align: center;
  line-height: 44px;
  transition: color .5s
              border .5s;

  &.active
  &:hover {
    color: #ff6700;
    border-color: #ff6700;
  }

  .v-price {
    position: absolute;
    top: 0;
    right: 16px;
    font-size: 14px;
  }
}