.logo {
  position: relative;
  float: left;
  width: 55px;
  height: 55px;
  margin-top: 23px;
  background-color: #ff6700;
  overflow: hidden;

  .logo-lk {
    position: absolute;
    display: block;
    top: 0;
    left: 0;
    width: 110px;
    height: 100%;
    transition: left 0.5s;

    &::before, &::after {
      content: '';
      float: left;
      width: 55px;
      height: 100%;
      background-position: center center;
    }

    &::before {
      background-image: url('data:image/png;base64,');
    }

    &::after {
      background-image: url('data:image/png;base64,');
    }
  }

  &:hover {
    .logo-lk {
      left: -55px;
    }
  }
}