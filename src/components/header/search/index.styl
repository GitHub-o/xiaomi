.search {
  float: right;
  width: 229px;
  height: 50px;
  margin-top: 25px;
  border: 1px solid #ccc;

  .search-wrap {
    height: 100%;

    input {
      width: 175px;
      height: 100%;
      text-indent: 10px;
      font-size: 18px;
      border: none;
    }

    .search-icon {
      float: right;
      width: 50px;
      height: 100%;
      border: none;
      border-left: 1px solid #ccc;
      background-color: transparent;
      background-image: url(../../../icons/search.png);
      background-size: 25px 25px;
      background-position: center center;
      background-repeat: no-repeat;
    }
  }
}