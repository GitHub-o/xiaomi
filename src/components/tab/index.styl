.tab-wrap {
  height: 120px;
  margin-bottom: 12px;
  border-top: 1px solid #ddd;
  border-bottom: 1px solid #ddd;
  background-color: #fff;

  .title {
    float: left;
    width: 100px;
    height: 100%;
    line-height: 60px;
  }

  .tab-row {
    height: 60px;
    line-height: 60px;

    .tab-list {
      margin-left: 100px;

      .tab-item {
        float: left;
        width: 100px;
        height: 100%;
        text-align: center;
        line-height: 60px;

        &.active {
          .tab-item-lk {
            color: #ff6700;
          }
        }
      }
    }
  }

  .search-row {
    height: 60px;

    .search-wrap {
      float: left;
      height: 30px;
      margin-top: 15px;
      margin-left: 35px;
      border: 1px solid #ccc;

      .icon {
        float: left;
        margin: 5px;
        width: 20px;
        height: 20px;
      }

      input {
        float: left;
        border: none;
        height: 100%;
      }
    }
  }
}