html {
	--input-checked-border-color: #50c0f8;
	--font-size: 14px;
	--color: #424242;
	--border-color: #ccc;
	--duration: .3s;
}

body,
div,
dl,
dt,
dd,
ul,
ol,
li,
h1,
h2,
h3,
h4,
h5,
h6,
pre,
code,
form,
fieldset,
legend,
input,
button,
textarea,
p,
blockquote,
th,
td {
	margin: 0;
	padding: 0;
}

body {
	background: #f5f5f5;
	color: var(--color);
	font-size: var(--font-size);
	font-family: '微软雅黑', Verdana, Arial, Helvetica, sans-serif;
	-webkit-font-smoothing: antialiased;
	-moz-osx-font-smoothing: grayscale;
}

td,
th,
caption {
	font-size: var(--font-size);
}

h1,
h2,
h3,
h4,
h5,
h6 {
	font-weight: normal;
	font-size: 100%;
}

address,
caption,
cite,
code,
dfn,
em,
strong,
th,
var {
	font-style: normal;
	font-weight: normal;
}

a {
	color: var(--color);
	text-decoration: none;
	cursor: pointer;
}

img {
	width: 100%;
	border: none;
	vertical-align: bottom;
}

ol,
ul,
li {
	list-style: none;
}

input,
textarea,
select,
button {
	border: 1px solid var(--border-color);
	font: var(--font-size) '微软雅黑', Verdana, Helvetica, Arial, sans-serif;
	color: var(--color);
	outline: none;
}

input[type="range"] {
	appearance: none;
	-ms-appearance: none;
	-webkit-appearance: none;
	height: 4px;
	border: none;
	background-color: #eee;
}

input[type='range']::-webkit-slider-thumb {
	-webkit-appearance: none;
	border: 3px solid var(--input-checked-border-color);
	height: 15px;
	width: 15px;
	border-radius: 50%;
	background: #fff;
	box-shadow: 0 0 2px;
	-webkit-box-shadow: 0 0 2px;
	cursor: pointer;
}

input[type='range']::-moz-range-thumb {
	border: 3px solid var(--input-checked-border-color);
	height: 15px;
	width: 15px;
	border-radius: 50%;
	background: #fff;
	box-shadow: 0 0 2px;
	-moz-box-shadow: 0 0 2px;
	cursor: pointer;
}

input[type='range']::-ms-thumb {
	border: 3px solid var(--input-checked-border-color);
	height: 15px;
	width: 15px;
	border-radius: 50%;
	background: #fff;
	box-shadow: 0 0 2px;
	-ms-box-shadow: 0 0 2px;
	cursor: pointer;
}

.cell-radio {
	float: left;
	width: fit-content;
	margin-right: 20px;
	line-height: 20px;
}

input[type="radio"],
input[type="checkbox"] {
	display: none;
}

input[type="radio"]+label,
input[type="checkbox"]+label {
	position: relative;
	display: inline-block;
	cursor: pointer;
	width: 15px;
	height: 15px;
	border: 1px solid #aaa;
	box-sizing: border-box;
	-ms-box-sizing: border-box;
	-moz-box-sizing: border-box;
	-o-box-sizing: border-box;
	vertical-align: middle;
	transition: border var(--duration), box-shadow var(--duration);
	-o-transition: border var(--duration), box-shadow var(--duration);
	-ms-transition: border var(--duration), box-shadow var(--duration);
	-moz-transition: border var(--duration), box-shadow var(--duration);
	-webkit-transition: border var(--duration), box-shadow var(--duration);
}

input[type="radio"]+label {
	border-radius: 50%;
}

input[type="radio"]+label:hover {
	border-color: var(--input-checked-border-color);
}

input[type="radio"]:checked+label {
	border: 3px solid var(--input-checked-border-color);
	box-shadow: 0 0 2px var(--input-checked-border-color);
	animation: pulse .5s;
}

input[type="checkbox"]+label::before,
input[type="checkbox"]+label::after {
	content: '';
	position: absolute;
	bottom: 1.5px;
	transition: background-color .3s;
	-ms-transition: background-color .3s;
	-moz-transition: background-color .3s;
	-webkit-transition: background-color .3s;
	-o-transition: background-color .3s;
}

input[type="checkbox"]+label::before {
	left: 3.5px;
	width: 2px;
	height: 5px;
	transform: rotate(-55deg);
	-o-transform: rotate(-55deg);
	-ms-transform: rotate(-55deg);
	-moz-transform: rotate(-55deg);
	-webkit-transform: rotate(-55deg);
}

input[type="checkbox"]+label:after {
	right: 3.5px;
	width: 2px;
	height: 10px;
	transform: rotate(20deg);
	-o-transform: rotate(20deg);
	-ms-transform: rotate(20deg);
	-moz-transform: rotate(20deg);
	-webkit-transform: rotate(20deg);
}

input[type="checkbox"]:checked+label {
	box-shadow: 0 0 2px var(--input-checked-border-color);
	border-color: var(--input-checked-border-color);
}

input[type="checkbox"]:checked+label::before,
input[type="checkbox"]:checked+label::after {
	background-color: var(--input-checked-border-color);
}

table {
	border-collapse: collapse;
}

div {
	box-sizing: border-box;
	-webkit-box-sizing: border-box;
	-ms-box-sizing: border-box;
	-moz-box-sizing: border-box;
	-o-box-sizing: border-box;
}

.clearfix:after {
	content: ".";
	display: block;
	height: 0;
	clear: both;
	visibility: hidden;
}

.clearfix {
	*zoom: 1;
}

::selection {
	background-color: #333;
	color: #fff;
}


/* 设置滚动条的样式 */
::-webkit-scrollbar {
	width: 5px;
}

/* 滚动槽 */
::-webkit-scrollbar-track {
	-webkit-box-shadow: inset 0 0 6px rgba(0, 0, 0, 0.3);
	border-radius: 10px;
	background: #f6f6f6;
}

/* 滚动条滑块 */
::-webkit-scrollbar-thumb {
	border-radius: 10px;
	/* background: rgba(0, 0, 0, 0.1); */
	background-color: #12b7f5;
	background-image: -webkit-linear-gradient(45deg, rgba(255, 93, 143, 1) 25%, transparent 25%, transparent 50%, rgba(255, 93, 143, 1) 50%, rgba(255, 93, 143, 1) 75%, transparent 75%, transparent);
	-webkit-box-shadow: inset 0 0 6px rgba(0, 0, 0, 0.5);
}

::-webkit-scrollbar-thumb:window-inactive {
	background: rgba(255, 0, 0, 0.4);
}

.clearfix::after {
  content: '';
  display: block;
  clear: both;
}

.cover {
  min-width: 1226px;
}

.container {
  width: 1226px;
  margin: 0 auto;
}
